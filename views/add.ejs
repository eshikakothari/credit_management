<%- include("partials/header") -%>
<div class="container">
<div class="form_css">

  <form class="form" action="/add" method="post">
    <div class=" form-group">
      <label for="name">Name</label>
      <input class="form-control" id="name" type="text" name="name" value="" required>
      <div>
        <div class=" form-group">
          <label for="email">Email</label>
          <input  class="form-control" id="email" type="email" name="email" value="">
        </div>
        <div class=" form-group">
          <label for="credits">Initial credits</label>
          <input  class="form-control" id="credits" type="number" name="credit" value="0" max="5000">
        </div>
        <button class="btn btn-dark" type="submit" name="button">Create</button>
  </form>
</div>

</div>
</body>

</html>
